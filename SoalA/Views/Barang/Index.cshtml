@model IEnumerable<Barang>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List Barang</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Barang" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Tambah Barang
            </a>
        </div>
    </div>
    <br />
    <form method="get" asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Cari Barang..." name="search" value="@ViewData["GetSearch"]">
            <input class="btn btn-primary" value="Cari" type="submit" asp-action="Index" />
        </div>
    </form>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Nama Barang</th>
                <th>Kode Barang</th>
                <th>Jumlah Barang</th>
                <th>Tanggal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Nama_Barang
                    </td>
                    <td>
                        @obj.Kode_Barang
                    </td>
                    <td>
                        @obj.Jumlah_Barang
                    </td>
                    <td>
                        @obj.Tanggal.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Barang" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i> Ubah
                            </a>
                            <a asp-controller="Barang" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Hapus
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
