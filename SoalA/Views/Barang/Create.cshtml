@model Barang
<form method="post">
    <div class="row">
        <h3>Tambah Barang</h3>
        <br />
        <br />
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-3">
        <label asp-for="Nama_Barang"></label>
        <input asp-for="Nama_Barang" class="form-control" />
        <span asp-validation-for="Nama_Barang" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Kode_Barang"></label>
        <input asp-for="Kode_Barang" class="form-control" />
        <span asp-validation-for="Kode_Barang" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Jumlah_Barang"></label>
        <input asp-for="Jumlah_Barang" class="form-control" />
        <span asp-validation-for="Jumlah_Barang" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tanggal"></label>
        <input asp-for="Tanggal" class="form-control" id="datepicker" type="text" />
        <span asp-validation-for="Tanggal" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success" style="width: 150px;">Tambah</button>
    <a asp-controller="Barang" asp-action="index" class="btn btn-primary" style="width: 150px;">Kembali</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
        <script type="text/javascript">
            $(function () {
                $("#datepicker").datepicker({ dateFormat: 'yy-mm-dd' }).val();;
            });
        </script>
    }
    }